@import './_tokens.styl'

html
	box-sizing border-box
	font-family FFBody
	font-size 62.5%
	scroll-behavior smooth

*,*:before,*:after
	box-sizing inherit

body
	margin 0
	font-family FFBody
	overflow-x hidden
	font-size 1.8rem

img
	max-width 100%
	height auto

figure
	margin 0

h1,h2,h3,h4,h5,h6
	font-family FFHeading

p
	font-size 1.4rem

.header
	display flex
	justify-content space-between
	padding 0 5%
	margin-top 25px
	&__figure
		width 140px
	&__button
		padding 7px 20px
		background-color VeryPaleBlue
		border 1px solid Pink
		color Pink
		border-radius 20px
		transition .2s
		cursor pointer
		&:hover
			color lighten(Pink, 10)
			border 1px solid lighten(Pink, 10)
			transform scale(.95)

.hero
	margin-top SpacingLong
	padding 0 5%
	text-align center
	&__article
		display flex
		flex-direction column
		align-items center
		h1
			max-width 270px
		p
			max-width 300px
		&__button
			margin SpacingMedium auto
			BigButton()
	&__figure
		display flex
		justify-content center
		&__image
			max-width 340px

.stats
	