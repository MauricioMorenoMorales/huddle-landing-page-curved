@import './_tokens.styl'

html
	box-sizing border-box
	font-family FFBody
	font-size 62.5%
	scroll-behavior smooth

*,*:before,*:after
	box-sizing inherit

body
	margin 0
	overflow-x hidden
	font-size 1.8rem

img
	max-width 100%
	height auto

figure
	margin 0

h1,h2,h3,h4,h5,h6
	font-family FFheading

.header
	display flex
	justify-content space-between
	padding 0 5%
	margin-top 25px
	&__figure
		width 140px
	&__button
		padding 7px 20px
		background-color VeryPaleBlue
		border 1px solid Pink
		color Pink
		border-radius 20px