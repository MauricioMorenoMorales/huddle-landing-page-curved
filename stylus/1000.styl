@import './_tokens.styl'

@media screen and (min-width 1000px)
	body
		font-size 4rem
	p
		font-size 2.0rem
	.header
		&__button
			height 40px
			width 140px
		&__figure
			width 220px
	.hero
		&__article
			h1
				max-width 1000px
				margin-bottom 0
			p
				max-width 800px
			button
		&__figure
			&__image
				max-width 1000px
	.stats
		&__item
			width 300px
			margin-left 150px
			margin-right 150px
			&__figure
				width 40px
			&__title
				font-size 9rem
			&__p
				margin-left -70px
	.benefits
		&__item
			&__figure
				max-width 500px
			&__text
				max-width 700px
	.footer-curve__picture
		img
			margin-bottom -15px
	.footer
		&__contact
			max-width 600px
			padding-right 100px
		&__newsletter
			width 100%
			max-width 600px
			&__p
				max-width 600px
			&__input
				flex-direction row
				align-items start
				&__text
					margin-right 100px
					width 90%
					margin-top -50px
				&__button
					margin-top 20px
					max-width 150px
	.input-text-container
		width 70%
	.warn-message
		font-size 1.1rem